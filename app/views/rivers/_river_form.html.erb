<h3>New River</h3>
<%= form_for(@river, html: {multipart: true}) do |f| %>
  <%=render 'shared/error_messages', object: f.object %>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.label :section %>
    <%= f.text_field :section, class: 'form-control' %>

    <%= f.label :difficulty %>
    <%= f.text_field :difficulty, class: 'form-control' %>

    <%= f.label :usgs_id %>
    <%= f.number_field :usgs_id, class: 'form-control' %>

    <%= f.label :state %>
    <%= f.text_field :state, class: 'form-control' %>


    <%= f.label :put_in %>
    <%= f.text_field :put_in, class: 'form-control' %>

    <%= f.label :take_out %>
    <%= f.text_field :take_out, class: 'form-control' %>

    <%= f.label :min_cfs %>
    <%= f.text_field :min_cfs, class: 'form-control' %>

    <%= f.label :max_cfs %>
    <%= f.text_field :max_cfs, class: 'form-control' %>


    <%= f.text_area :details, placeholder: "Enter River description" , class:'form-control'%>

    <div>
      <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' , class:'form-control '%>
    </div>
<div>
  <%= f.submit "Create River", class: "btn btn-primary" %>
</div>

<% end %>

<script>
$('#river_picture').bind('change', function() {
var size_in_megabytes = this.files[0].size/1024/1024;
if (size_in_megabytes > 5) {
alert('Maximum file size is 5MB. Please choose a smaller file.');
}
});
</script>
