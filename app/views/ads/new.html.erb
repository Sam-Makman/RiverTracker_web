<h1>New Ad </h1>
<%= form_for(@ad) do |f| %>
  <div class="field">
    <%= f.label :title  %><br>
    <%= f.text_field :title, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, class:"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
